<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <display-name>BasicCalculator</display-name>
    <filter>
        <filter-name>Auth</filter-name>
        <filter-class>Filters.Auth</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Auth</filter-name>
        <servlet-name>AuthController</servlet-name>
    </filter-mapping>
    <servlet>
        <servlet-name>CalendarController</servlet-name>
        <servlet-class>Controllers.CalendarController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AuthController</servlet-name>
        <servlet-class>Controllers.AuthController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CalendarController</servlet-name>
        <url-pattern>/CalendarController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AuthController</servlet-name>
        <url-pattern>/AuthController</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
